#!/bin/bash -x

depext=`opam install $* -e ubuntu`
echo Ubuntu depexts: $depext
if [ "$depext" != "" ]; then 
  sudo apt-get install -qq -y build-essential m4 
  sudo apt-get install -qq -y $depext
fi
srcext=`opam install $* -e source,linux`
echo Ubuntu srcexts: $srcext
if [ "$srcext" != "" ]; then
  t=`mktemp`
  curl -sL ${srcext} > $t
  bash -ex $t
fi

opam install $*
